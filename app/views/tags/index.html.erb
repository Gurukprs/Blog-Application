<div class="row">
  <div class="col-md-12">
    <h1>Tags</h1>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-12">
    <%= link_to "New Tag", new_tag_path, class: "btn btn-primary" %>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <% if @tags.any? %>
      <div class="table-responsive">
        <table class="table table-striped table-hover">
          <thead class="table-dark">
            <tr>
              <th>Name</th>
              <th>Posts</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @tags.each do |tag| %>
              <tr>
                <td><%= tag.name %></td>
                <td><%= tag.posts.count %></td>
                <td>
                  <%= link_to "Edit", edit_tag_path(tag), class: "btn btn-sm btn-outline-primary" %>
                  <%= link_to "Delete", tag_path(tag), method: :delete, data: { confirm: "Delete this tag?" }, class: "btn btn-sm btn-outline-danger" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <div class="alert alert-info">
        No tags yet. Create the first one!
      </div>
    <% end %>
  </div>
</div>


