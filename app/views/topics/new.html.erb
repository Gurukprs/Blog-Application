<div class="row">
  <div class="col-md-12">
    <h1>New Topic</h1>
  </div>
</div>

<div class="row">
  <div class="col-md-6">
    <%= form_with model: @topic, html: { class: "needs-validation" } do |f| %>
      <% if @topic.errors.any? %>
        <div class="alert alert-danger" id="error_explanation">
          <h5 class="alert-heading"><%= pluralize(@topic.errors.count, "error") %> prohibited this topic from being saved:</h5>
          <ul class="mb-0">
            <% @topic.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="mb-3">
        <%= f.label :name, class: "form-label" %>
        <%= f.text_field :name, class: "form-control #{'is-invalid' if @topic.errors[:name].any?}" %>
        <% if @topic.errors[:name].any? %>
          <div class="invalid-feedback">
            <%= @topic.errors[:name].join(", ") %>
          </div>
        <% end %>
      </div>

      <div class="mb-3">
        <%= f.submit "Create Topic", class: "btn btn-primary" %>
        <%= link_to "Back", topics_path, class: "btn btn-secondary" %>
      </div>
    <% end %>
  </div>
</div>
