<div class="row">
  <div class="col-md-12">
    <h1>Topics</h1>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-12">
    <%= link_to "View All Posts", posts_path, class: "btn btn-outline-primary" %>
    <%= link_to "New Topic", new_topic_path, class: "btn btn-primary" %>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <% if @topics.any? %>
      <div class="list-group">
        <% @topics.each do |topic| %>
          <%= link_to topic_posts_path(topic), class: "list-group-item list-group-item-action" do %>
            <h5 class="mb-1"><%= topic.name %></h5>
          <% end %>
        <% end %>
      </div>
    <% else %>
      <div class="alert alert-info">
        No topics yet. <%= link_to "Create the first topic", new_topic_path, class: "alert-link" %>.
      </div>
    <% end %>
  </div>
</div>
