<div class="row">
  <div class="col-md-12">
    <h1>Comment Ratings</h1>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-12">
    <p><strong>Comment:</strong></p>
    <div class="card">
      <div class="card-body">
        <p class="card-text"><%= simple_format(@comment.body) %></p>
        <p class="card-text">
          <small class="text-muted">
            <strong>Author:</strong> <%= @comment.user.email %> | 
            <%= @comment.created_at.strftime("%b %d, %Y %I:%M %p") %>
          </small>
        </p>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <h2>All User Ratings</h2>

    <% if @user_comment_ratings.any? %>
      <div class="table-responsive">
        <table class="table table-striped table-hover">
          <thead class="table-dark">
            <tr>
              <th>User Email</th>
              <th>Rating</th>
              <th>Rated At</th>
            </tr>
          </thead>
          <tbody>
            <% @user_comment_ratings.each do |rating| %>
              <tr>
                <td><%= rating.user.email %></td>
                <td>
                  <%= pluralize(rating.stars, 'star') %>
                  <% rating.stars.times do %>
                    ‚≠ê
                  <% end %>
                </td>
                <td>
                  <%= rating.created_at.strftime("%b %d, %Y %I:%M %p") %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      
      <div class="card mt-3">
        <div class="card-body">
          <p class="mb-1"><strong>Total Ratings:</strong> <%= @user_comment_ratings.count %></p>
          <p class="mb-0">
            <strong>Average Rating:</strong> 
            <% avg = @user_comment_ratings.average(:stars) %>
            <%= avg ? sprintf("%.2f", avg) : "N/A" %> stars
          </p>
        </div>
      </div>
    <% else %>
      <div class="alert alert-info">
        No ratings yet for this comment.
      </div>
    <% end %>
  </div>
</div>

<div class="row mt-3">
  <div class="col-md-12">
    <%= link_to 'Back to Post', topic_post_path(@topic, @post), class: "btn btn-secondary" %>
  </div>
</div>




